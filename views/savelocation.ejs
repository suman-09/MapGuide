<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src='https://api.mapbox.com/mapbox-gl-js/v2.8.1/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.8.1/mapbox-gl.css' rel='stylesheet' />
    <link rel="stylesheet" href="/css/savelocation.css">

    <title>WEB_BASED_MAP</title>
    
</head>
<body>

<!-- nav bar  -->
  <div>
    <ul id="nav" style="list-style: none;">
      <li class="username">Welcome, <%= user.name %></li>
      <li class="logout mx-2"><a href="/mappage"> Map-Page </a>
        <a class="mx-2" href="/favlocation">Your Favourite Locations</a>
        <a class="mx-2" href="/logout">Logout</a></li>
    </ul>
   </div>

<!-- Load the `mapbox-gl-geocoder` plugin. -->
<!-- direction  -->
<script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-directions/v4.1.0/mapbox-gl-directions.js"></script>
<link rel="stylesheet" href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-directions/v4.1.0/mapbox-gl-directions.css" type="text/css">

<!-- map div  -->
  <div id="map"></div>
<script>

  mapboxgl.accessToken = 'pk.eyJ1Ijoic3VtYW4wMDA5IiwiYSI6ImNsMzY5YjB2bjFsdHozYnA5dHN3b3FrdjEifQ.rfW8EEKX9_adNETGuzkgrg';

  var map = new mapboxgl.Map({
    container: 'map',
    style: 'mapbox://styles/mapbox/streets-v11',
    center: [-77.04, 38.907],
    zoom: 11.15
  });

// Add zoom and rotation controls to the map.
const nav = new mapboxgl.NavigationControl()
map.addControl(nav, 'top-right');

//direction feature
map.addControl(
new MapboxDirections({
accessToken: mapboxgl.accessToken
}),
'top-left'
);

</script>

</body>
</html>