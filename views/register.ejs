<body>
    <div class="container-fluid d-flex align-items-center justify-content-center">
        <div class="loginForm">
            <p class="text-center display-6 text-white mt-4">REGISTER</p>
            <form action="/Login" method="post">
                <div class="mb-3 mx-4">
                  <label for="" class="form-label"></label>
                  <input type="text" class="form-control" name="" id="" aria-describedby="helpId" placeholder="Enter Your Name">
                </div>
                <div class="mb-3 mx-4">
                    <label for="" class="form-label"></label>
                    <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelpId"
                        placeholder="Enter Your Email">
                </div>
                <div class="mb-3 mx-4">
                    <label for="" class="form-label"></label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Enter your password">
                </div>
                <!-- confirm password part  -->

                <!-- <div class="mb-3 mx-4">
                    <label for="" class="form-label"></label>
                    <input type="password" class="form-control" name="" id="" placeholder="Confirm password">
                </div> -->
                
                <p class="text-center my-5"><a type="submit" id="submit" class="btn">Submit</a></p>
            </form>

            <p class="text-center text-white h5 my-3"><span>Don't Have a Account? </span><span><a href="login"
                        style="text-decoration: none;color: red;"> Login </a></span></p>
        </div>


    </div>
</body>

